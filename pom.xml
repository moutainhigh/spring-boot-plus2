<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.0.RELEASE</version>
        <relativePath/>
    </parent>

    <groupId>com.ws.ldy</groupId>
    <artifactId>spring-boot-plus2</artifactId>
    <version>${revision}</version>
    <!-- 如果不定义名称系统默认为  <name>${groupId}:${artifactId}:${revision}</name> -->
    <name>${artifactId}:${revision}</name>
    <packaging>pom</packaging>
    <description>Demo project for Spring Boot</description>

    <modules>
        <module>xj-server</module>      <!-- 代码    -->
        <module>xj-third</module>       <!-- 功能集成 -->
        <module>xj-base</module>        <!-- 核心模块 -->
    </modules>

    <properties>
        <!--
          架构版本 RELEASE=正式版 SNAPSHOT=开发版(实时刷新jar依赖),
          改版本号修改时请使用全局替换, ${revision} 读取会导致子模块无法单独打包
          spring-boot-plus2/pom.xml + xj-base/pom.xml + xj-server/pom.xml + xj-third/pom.xml,
         -->
        <revision>0.1.2.2-SNAPSHOT</revision>
        <!-- 文件拷贝时的编码 -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- 编译时的编码 -->
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
        <!-- jdk 版本-->
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.compilerVersion>1.8</maven.compiler.compilerVersion>
        <!-- ================== 编码环境 END ======================= -->
    </properties>


    <!-- 所有子模块中默认加载依赖  -->
    <dependencies>
        <!-- spring-mvc 虽然获得很多子服务不启动,但需要用到web注解-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <!-- lombok  生成get/ser  了马达 -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>


    <!-- 统一依赖管理  -->
    <dependencyManagement>
        <dependencies>
            <!--  ================================================  -->
            <!--  ============== 当前架构jar - start  ================  -->
            <!--  ================================================  -->
            <!-- 系统核心代码 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-base-admin</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 界面- 后台管理系统ui -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-base-admin-ui</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 第三方服务- 阿里云oss -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-base-core</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 聚合支付 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-base-pay</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 阿里云oss  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-aliyun-oss</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 阿里云sms -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-aliyun-sms</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 百度智能云 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-baidu</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 快递100 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-kuaidi-kuaidi100</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 顺丰 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-kuaidi-sf</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 七牛云 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-qiniu-oss</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- qq互联 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-qq-open</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- sms1086 短信 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-sms1086</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 微信小程序  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-wx-app</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 微信公众号  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-wx-mp</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 微信开放平台  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-wx-open</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- 微信支付  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-api-wx-pay</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- swagger 接口文档  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-doc-swagger2</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- admin监控平台服务  -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-fw-boot-admin</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- redis 服务 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-fw-redis</artifactId>
                <version>${revision}</version>
            </dependency>
            <!-- websocket 服务 -->
            <dependency>
                <groupId>com.ws.ldy</groupId>
                <artifactId>xj-fw-websocket</artifactId>
                <version>${revision}</version>
            </dependency>
            <!--  ================================================  -->
            <!--  ============== 当前架构jar - end  ================  -->
            <!--  ================================================  -->
        </dependencies>
    </dependencyManagement>
</project>
