<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>xj-server</artifactId>
        <groupId>com.ws.ldy</groupId>
        <version>0.0.9-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>xj-pets-server</artifactId>
    <version>${xj-pets-server.version}</version>

    <dependencies>
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-admin-server</artifactId>
            <version>${xj-admin-server.version}</version>
        </dependency>
        <!-- 界面- 后台管理系统ui -->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-admin-ui</artifactId>
            <version>${xj-admin-ui.version}</version>
        </dependency>
        <!-- 接口文档- knife4j-ui 注意加载顺序,必须在swagger2之下引入 -->
        <!--        <dependency>-->
        <!--            <groupId>com.ws.ldy</groupId>-->
        <!--            <artifactId>xj-doc-knife4j</artifactId>-->
        <!--            <version>${xj-doc-knife4j.version}</version>-->
        <!--        </dependency>-->
        <!-- 接口文档- swagger2-ui -->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-doc-swagger2-ui</artifactId>
            <version>${xj-doc-swagger2-ui.version}</version>
        </dependency>
        <!-- 第三方服务- 阿里云sms -->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-api-aliyun-sms</artifactId>
            <version>${xj-api-aliyun-sms.version}</version>
        </dependency>
        <!-- 第三方服务- 七牛云oss-->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-api-qiniu-oss</artifactId>
            <version>${xj-api-qiniu-oss.version}</version>
        </dependency>
        <!--第三方服务- 微信小程序相关-->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-api-wx-app</artifactId>
            <version>${xj-api-wx-app.version}</version>
        </dependency>
        <!-- 第三方服务- 微信公众号相关 -->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-api-wx-mp</artifactId>
            <version>${xj-api-wx-mp.version}</version>
        </dependency>
        <!-- 聚合支付(微信(已集成)/支付宝) -->
        <dependency>
            <groupId>com.ws.ldy</groupId>
            <artifactId>xj-pay-server</artifactId>
            <version>${xj-pay-server.version}</version>
        </dependency>
    </dependencies>

    <build>
        <!-- 打包后的 jar名称 -->
        <finalName>pets-server-${profiles.active}</finalName>
        <plugins>
            <!-- 打包 -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <!-- 多环境配置 -->
    <profiles>
        <profile>
            <id>dev</id>
            <!-- 环境标识，需要与配置文件的名称相对应 -->
            <properties>
                <profiles.active>dev</profiles.active>
            </properties>
            <!-- 默认环境 -->
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <profiles.active>test</profiles.active>
            </properties>
        </profile>
        <profile>
            <id>pro</id>
            <properties>
                <profiles.active>pro</profiles.active>
            </properties>
        </profile>
    </profiles>
</project>