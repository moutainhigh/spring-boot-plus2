<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ws.ldy.manage.admin.mapper.AdminAuthorityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ws.ldy.manage.admin.model.entity.AdminAuthority">

        <result column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
        <result column="version" property="version"/>
        <result column="pid" property="pid"/>
        <result column="method" property="method"/>
        <result column="url" property="url"/>
        <result column="desc" property="desc"/>
        <result column="disable" property="disable"/>
    </resultMap>

    <!-- 通用查询结果列: <include refid="Base_Column_List"></include>  -->
    <sql id="Base_Column_List">

               id,
               create_user,
               update_user,
               create_time,
               update_time,
               deleted,
               version,
               pid,
               method,
               url,
               desc,
               disable
    </sql>


    <select id="findByUserIdaAndDisableFetchAuthority" resultType="com.ws.ldy.manage.admin.model.entity.AdminAuthority">
        SELECT * FROM  t_admin_authority where id in(
                  SELECT auth_id FROM t_admin_role_auth  where role_id in (
                       SELECT role_id FROM t_admin_role_user ru,t_admin_role r where ru.role_id=r.id and ru.deleted=0  and r.deleted=0 and disable=#{disable} and user_id = #{userId}
                  ) and deleted=0
         ) and deleted=0  and disable=#{disable} and state=#{state}
    </select>
</mapper>

